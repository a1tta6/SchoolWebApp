@page
@model SchoolWebApp.Pages.ClassPage.EditModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Редактировать</title>
</head>
<body>

<h4>Класс</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Class.Id" />
            <div class="form-group">
                <label asp-for="Class.ParallelId" class="control-label">Параллель</label>
                <select asp-for="Class.ParallelId" class="form-control" asp-items="ViewBag.ParallelId"></select>
                <span asp-validation-for="Class.ParallelId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Class.YearId" class="control-label">Год</label>
                <select asp-for="Class.YearId" class="form-control" asp-items="ViewBag.YearId"></select>
                <span asp-validation-for="Class.YearId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Class.TeacherId" class="control-label">Учитель</label>
                <select asp-for="Class.TeacherId" class="form-control" asp-items="ViewBag.TeacherId"></select>
                <span asp-validation-for="Class.TeacherId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Назад к списку классов</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
