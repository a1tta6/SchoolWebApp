@page
@model SchoolWebApp.Pages.TeacherPage.EditModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Редактировать учителя</title>
</head>
<body>

<h4>Учитель</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Teacher.Fullname" class="control-label">ФИО</label>
                <input asp-for="Teacher.Fullname" class="form-control" />
                <span asp-validation-for="Teacher.Fullname" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Teacher.Id" />
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Назад к списку учителей</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
