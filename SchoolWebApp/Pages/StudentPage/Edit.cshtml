@page
@model SchoolWebApp.Pages.StudentPage.EditModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Редактировать ученика</title>
</head>
<body>

<h4>Ученик</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Student.FullName" class="control-label">ФИО</label>
                <input asp-for="Student.FullName" class="form-control" />
                <span asp-validation-for="Student.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.ClassId" class="control-label">Номер класса</label>
                <select asp-for="Student.ClassId" class="form-control" asp-items="ViewBag.ClassId"></select>
                <span asp-validation-for="Student.ClassId" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="Student.DeleteDate" class="control-label"></label>
                <input asp-for="Student.DeleteDate" class="form-control" />
                <span asp-validation-for="Student.DeleteDate" class="text-danger"></span>
            </div>*@
            <input type="hidden" asp-for="Student.Id" />
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Назад к списку учеников</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
