@page
@model SchoolWebApp.Pages.StudentPage.DeleteModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Удаление</title>
</head>
<body>

<h3>Вы уверены, что хотите удалить ученика?</h3>
<div>
    <h4>Ученик</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ФИО
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.FullName)
        </dd>
        <dt class="col-sm-2">
            Номер класса
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Class.Id)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Student.Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-page="./Index">Назад к списку</a>
    </form>
</div>
</body>
</html>
