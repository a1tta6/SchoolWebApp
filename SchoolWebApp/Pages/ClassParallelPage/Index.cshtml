@page
@model SchoolWebApp.Pages.ClassParallelPage.IndexModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Параллели</title>
</head>
<body>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Класс
                </th>
                <th>
                    Уровень
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ClassParallel)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Level.LevelName)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        <a asp-page="../Index">Назад к списку сущностей</a>
    </div>
</body>
</html>
